@using System.Security.Claims;
@model FYP.Models.post
@{
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/search.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/Chat.css" rel="stylesheet" />
<script src="~/Scripts/jquery.signalR-2.0.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<br />
<div class="container">
    <hgroup class="mb20">
        <h1>Search Results</h1>
        <h2 class="lead"><strong class="text-danger">@ViewBag.post.Count</strong> results were found for the search for <strong class="text-danger">@ViewBag.query</strong></h2>
    </hgroup>

    <section class="col-xs-12 col-sm-6 col-md-12">
        @foreach (FYP.Models.post s in ViewBag.post)
        {
            <article class="result search-result row">
                <div class="col-xs-12 col-sm-12 col-md-2">
                    <ul class="meta-search">
                        <li><i class="glyphicon glyphicon-calendar"></i> <span>@s.time.Split(' ')[0]</span></li>
                        <li><i class="glyphicon glyphicon-time"></i> <span>@s.time.Split(' ')[1]</span></li>
                        <li><i class="glyphicon glyphicon-tags"></i> <span>@s.owner</span></li>
                    </ul>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-7 excerpet">
                    <h3>
                        <a href="../User/post?pid=@s.postId" class="username" id="UserNo">@s.title</a>
                    </h3>
                    <p>@s.text</p>
                </div>
                <span class="clearfix borda"></span>
            </article>
        }
    </section>
</div>
